<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="resort.mapper.ResortFacilityMapper">
    <select id="getFacilitiesByResortId" parameterType="int" resultType="int">
        select facility_id from resort_facility_map where resort_id = #{resort_id}
    </select>

    <insert id="addFacilityToResort" parameterType="resort.dto.ResortFacilityMapDTO">
        insert into resort_facility_map values(#{resort_id}, #{facility_id})
    </insert>

    <delete id="removeFacilityFromResort" parameterType="map">
        delete from resort_facility_map where resort_id = #{resortId} and facility_id = #{facilityId}
    </delete>


</mapper>