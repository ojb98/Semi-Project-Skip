<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="rental.mapper.CartItemMapper">
    <insert id="insertCartItem" parameterType="rental.dto.CartItemDTO">
        insert into cart_items values (cart_items_seq.nextval, #{uuid}, #{category}, #{ref_id}, #{quantity}, #{price})
    </insert>
    
    <select id = "selectCartItemByUUID" parameterType = "int" resultType = "rental.dto.CartItemDTO">
    	select category, ref_id, quantity, price from cart_items where uuid = #{uuid}
    </select>
    
</mapper>